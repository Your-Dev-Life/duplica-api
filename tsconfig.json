{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "outDir": ".build",
    "module": "CommonJS",
    "moduleResolution": "node",
    "incremental": true,
    "skipLibCheck": true,
    "lib": ["ES2020"],
    "rootDir": "./",
    "baseUrl": "./src",
    "types": ["jest"],
    "paths": {
      "app/*": ["./*"],
      "handlers/*": ["./handlers/*"],
      "data/*": ["./data/*"],
      "http/*": ["./http/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", ".serverless/**/*", ".webpack/**/*", "*.config.js", "**/*.js"]
}
